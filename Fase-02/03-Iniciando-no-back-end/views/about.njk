{% extends "layout.njk" %}

{% block head %}
    <title>Sobre - {{ about.nome }}</title>
{% endblock %}

{% block content %}
    <div class="" id="wrapper">
        <img src="{{ about.avatar_url }}" alt="Uma imagem de {{ about.nome }}">
        <h1>{{ about.nome }}</h1>
        <h2>{{ about.role }}</h2>
        <p>{{ about.description }}</p>
    </div>

    <div id="links-footer" class="links">
        {% for link in about.links %}
            <a href="{{ link.url }}" target="_blank">{{ link.name }}</a>
        {% endfor %}
    </div>
{% endblock %}


