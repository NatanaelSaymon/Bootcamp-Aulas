{% extends "layout.njk" %}

{% block head %}

    <title>Portfolio - Mayk Brito</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    
{% endblock %}

{% block content %}

        <div class="" id="wrapper">
            <h1>Aulas</h1>
        </div>

        <section class="cards">
            <!--card-->
            {% for item in items %} 
            <!--Dentro dessa estrutura de repetição, ele vai repetir para cada item que tiver, nesse caso, são 6 itens-->
            <div class="card" id="{{ item.id }}">
                <div class="card_image-container {{ 'featured-wrapper' if item.featured }}"> <!--Inserindo um if direito no html-->
                    <img 
                    src="https://img.youtube.com/vi/{{ item.id }}/maxresdefault.jpg" 
                    alt="Imagem de {{ item.title }}">

                    <!--Destaque no video-->
                    {% if item.featured %}
                        <div class="featured">Featured</div>
                    {% endif %}
                </div>

                <div class="card_content">
                    <p>{{ item.title }}</p>
                </div>
    
                <div class="card_info">
                    <p>{{ item.duration }}</p>
                    <p class="card_price">{{ item.price }}</p>
                </div>
            </div>
            {%endfor%} <!--FECHAMENTO DO FOR-->

        </section>

        <!--MODAL-->
        <div class="modal-overlay">
            <div class="modal">
                <a class="close-modal">
                    <i class="material-icons">close</i>
                </a>

                <div class="modal-content">
                    <!--video-->
                    {# <iframe src="" frameborder="0"></iframe> #}
                </div>
            </div>
        </div>

        <script src="scripts.js"></script>

{% endblock %}